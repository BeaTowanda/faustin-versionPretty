<body>
    
    <header>
        <%- include('partials/header') %>
    </header>    
    <div class="errores">
        <ul></ul>
    </div>
    <p class="line-1 anim-typewriter">¡Bienvenido! registrate para poder </p>
    <p style ="color:#15ab92 " class="line-2 anim2-typewriter">OPERAR CON SEGURIDAD </p>
<div class="containerFormRegistro">
    <section class="formularioParaRegistro">
        
        <form  action="/busers/register?_method=PUT" enctype="multipart/form-data" method="POST" >
            <p><label id="" for ="usuario" class="todosLosTitulos">Usuario</label>
                <input id="user" class="todosLosBotones" placeholder="" type="text"  name="usuario" ></p>
                <% if(locals.errorsReg && locals.errorsReg.usuario){ %>
                    <span id="errorMsge" > <%= errorsReg.usuario.msg  %> </span>
                  <% } %> 
                <br/>
            <!--<div class="contenedorTodosLosTitulos">-->
                <p><label id="" for ="nombre" class="todosLosTitulos">Nombre</label>
                <input id="name" class="todosLosBotones" placeholder="" type="text"  name="primerNombre" ></p> 
                <% if(locals.errorsReg && locals.errorsReg.primerNombre){ %>
                    <span id="errorMsge" > <%= errorsReg.primerNombre.msg  %> </span>
                  <% } %> 
                <br/>   
                
                <p><label id="" for ="apellido" class="todosLosTitulos">Apellido</label>
                <input id="surname" class="todosLosBotones" placeholder="" type="text"  name="apellido" ></p> 
                <% if(locals.errorsReg && locals.errorsReg.apellido){ %>
                    <span id="errorMsge" > <%= errorsReg.apellido.msg  %> </span>
                  <% } %> 
                <br/>   
                
                <p><label id="" for ="contraseña" class="todosLosTitulos">Contraseña</label>
                <input id="pass" class="todosLosBotones" placeholder="" type="password"  name="contraseña"></p>
                <% if(locals.errorsReg && locals.errorsReg.contraseña){ %>
                    <span id="errorMsge" > <%= errorsReg.contraseña.msg  %> </span>
                  <% } %> 
                <br/>                 
                
                <p><label id="" for ="email" class="todosLosTitulos">Correo Electrónico</label>
                <input id="email" class="todosLosBotones" placeholder="" type="text"  name="mail" ></p>
                <% if(locals.errorsReg && locals.errorsReg.mail){ %>
                    <span id="errorMsge" > <%= errorsReg.mail.msg  %> </span>
                  <% } %> 
                <br/> 
                <p><label id="" for="file">Ingresá tu AVATAR</label>
                    <input id="avatar" class="todosLosBotones" type="file" name="avatar" id="archivo" accept=".png, .jpeg, .jpg, .gif" sytle="display:none"> </p>
                
                <p><label id="" for="fechaNacimiento">Fecha de Nacimiento</label>
                    <input id="born" class="todosLosBotones" type="date" name="fechaNacimiento" id="archivo"> </p>
                <% if(locals.errorsReg && locals.errorsReg.fechaNacimiento){ %>
                    <span id="errorMsge" > <%= errorsReg.fechaNacimiento.msg  %> </span>
                 <% } %> 
                    <br/>
                <% if ((user.usuario != "no") && (user.administrador === 2) ){ %>
                <p><label id="" for="categoria">Categoria</label>
                    <input id="cat" class="todosLosBotones" type="text" name="categoria" id="archivo"> </p>
                <% if(locals.errorsReg && locals.errorsReg.categoria){ %>
                    <span id="errorMsge" > <%= errorsReg.categoria.msg  %> </span>
                <% } %> 
                <% } %>
                     <br/> 
                     <br/>
                     <a href="#" class="terminos">Términos y condiciones</a>        
                <p class="terYC">
                    <span>
                        <label for="terminos">He leido y acepto los Términos y Condiciones</label>                       
                        <input type="checkbox" name="terminos" value="ok">
                   <!--- </span>
                    <span>He leido y acepto los</span><span><a href="https://www.google.com"> terminos y condiciones</a></span> -->
                </p>
            
            <div class="crearCuenta">
               <!--- <p> <button type="submit" class="crearCuentaBoton">CREAR CUENTA</button> -->
                    <p> <button type="submit" id="enviar">CREAR CUENTA</button>                    
                     <br/>
                    <br/>
                    <a style="color:#540b0e" href="/" id="boton1">Volver a la Pagina Principal</a>
                </p>
            </div>
        </form>
 
    </section> 
   
</div> 
