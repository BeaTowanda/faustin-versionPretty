               <option value = "C <%= colecciones[i].id %>">COLECCION:<%= colecciones[i].colection_name %></option>
               <% } %> 
              
               <% for (i=0 ; i < tipos.length ; i++) { %>
               <option value = "T <%= tipos[i].id %>"> TIPO :<%=tipos[i].type_name %></option>
               <% } %>
               
                       
                </select>
                <button id="botonSearch" value="busca" type="submit" aria-placeholder="fa fa-search"><i class="fa fa-search"></i></button>
 
    </div>

