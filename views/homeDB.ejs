    <div class="barraBusqueda">
        <form action="/bproduct/buscarPorBarra" method="GET">
                <select name ="busca"  class="selectBuscaBarra">
                <option value="">QUE ESTAS BUSCANDO ? </option>
                <option value="all ">Todos los productos </option>
                <option value="O ">OFERTAS de la SEMANA </option>
