<body>
    <%- include('partials/header') %>
<main>
    <form action="/bproduct/registraCompra/<%= suma %>" method="POST">
    <div class="tituloPaginaFin">
            <h2><i class="fa fa-shopping-cart" aria-hidden="true"></i> </h2>       
            <h3 class="totalEnvio2">Sub-Total Compra: <spam> $ <%= suma %> </spam></h3>
            <input placeholder="" type="number" name="subTotal" id="noSeVe" value="<%= suma %>" ></p>
            <input placeholder="" type="number" name="nroFact" id="noSeVe" value="<%= facturacion.numero %>" ></p>
            <div class="muestraTax">
            <p><label id="labelDatosFacturacion" for ="taxCondicion">Condicion Impositiva : <%= impuestos.tax_condition %></label>
                <input placeholder=""  name="taxCondicion" id="noSeVe" value="<%= impuestos.tax_condition %>"></p> 
            <p><label id="labelDatosFacturacion" for ="taxCuit">CUIT : <%= impuestos.cuit %></label>
                <input placeholder=""  name="taxCuit" id="noSeVe" value="<%= impuestos.cuit %>"></p>  
            <p><label id="labelDatosFacturacion" for ="taxCuil">CUIL : <%= impuestos.cuil %></label>
                <input placeholder=""  name="taxCuil" id="noSeVe" value="<%= impuestos.cuil %>"></p> 
            <p><label id="labelDatosFacturacion" for ="taxBrutos">Ingresos Brutos : <%= impuestos.ingresosBrutos %></label>
                <input placeholder=""  name="taxBrutos" id="noSeVe" value="<%= impuestos.ingresosBrutos %>"></p> 
            <p><label id="labelDatosFacturacion" for ="usuario">Ganancias : <%= impuestos.retGanancias %></label>
                <input placeholder=""  name="taxGanancias" id="noSeVe" value="<%= impuestos.retGanancias %>"></p>
            </div>

    </div>
   <!--- <form action="/bproduct/registraCompra/<%= suma %>" method="POST"> -->
        <div class="datosFacturacion">
            <p><label id="" for ="nombreProducto">DIRECCION ENTREGA</label>
            <input placeholder="" type="text" minlength="10" maxlength="45" name="direccion" id="direccion" required "[[A-Za-z ]{1,6}"></p>
            <% if(locals.errorsProd && locals.errorsProd.color){ %>
                <br/>
                <p id="errorMsge"> <%= errorsProd.direccion.msg  %> </p>
    <% } %> 
            <br/>

            <p><label id="" for ="descripcionProducto">CODIGO POSTAL</label>
                <input placeholder="" type="text" minlength="4" maxlength="18" name="codigoPostal" id="codigoPostal" required "[[A-Za-z ]{1,6}"></p> 
            <br/> 
    <% if(locals.errorsProd && locals.errorsProd.color){ %>
                <br/>
                <p id="errorMsge"> <%= errorsProd.codigoPostal.msg  %> </p>
    <% } %> 
            <div class="seleccionDistribucion">
                <h3>Tipo De Distribuci√≥n</h3>
                <div id="tipoDistribucion">
                <select name ="costoDistribucion" id ="talles">
                    <option value ="<%= facturacion.standard %>">Standard:$ <%= facturacion.standard %> </option>
                    <option value ="<%= facturacion.premiun %>">Premiun :$ <%= facturacion.premiun %></option>                     
                </select>
        <% if(locals.errorsProd && locals.errorsProd.color){ %>
                    <br/>
                    <p id="errorMsge"> <%= errorsProd.costoDistribucion.msg  %> </p>
        <% } %> 
            </div> 
            <br/> 
            <div class="seleccionPago">
                <h3>FORMA DE PAGO </h3>
                <br/>
                <div class="imagenesPago"> 

                <input type="checkbox" id = "colorList" name="visa" value="visa" >
                <label for=""><img id="idPago" src="/images/visa.jpg"></label>          
                <input type="checkbox" id="amex" name="amex" value="azul">
                <label for=""><img id="idPago" src="/images/amex.jpg"></label>          
                <input type="checkbox" id="mp" name="mp" value="aqua">
                <label for=""><img id="idPago" src="/images/mp.jpg"></label>          
                <input type="checkbox" id ="master" name="master" value="superman">
                <label for=""><img id="idPago" src="/images/master.jpg"></label>
                <input type="checkbox" id ="banco" name="banco" value="superman">
                <label for="" class="iconoPago" ><i class="fa-solid fa-money-check"></i></label>
            </div>  
            <div class="seleccionCuotas">
                <h3>Seleccione cantidad de cuotas </h3>
                <div id="tipoDistribucion">
                <select name ="distribucionCliente" id ="talles">
                    <option value = "Standar"> PAGO TOTAL  </option>
                    <option value = "Standar"> 3 CUOTAS </option>
                    <option value = "Express"> 6 CUOTAS</option>
                    <option value = "Standar">12 CUOTAS </option>                     
                </select>
            </div>        
            
        </div>
        <div class="submitMasEnviar">          
            <input type="submit" name="submit" id="irBaja" value="CREAR Factura"> </input>
        </div>        
        <div class= "closeMain" >
        <a href="/" id="vuelvo">Volver a Pagina Principal</a>
        </div>
       
    </form>
</main>

