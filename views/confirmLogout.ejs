<body>        
    <%- include('partials/header') %>
<div class="bodyLoginNuevo" >  
    <div class="cuerpoLoginNuevo" >
            <div class="bodyLogoLogin">         
                <ul> 
                <li style="color:#9e9e9e ">¿querés desloguearte?</li>     
                <li id="logoLogin"><i class="fas fa-user-circle"></i></li>
                <li><a href="#modal2">Importante<i class="fas fa-user-edit"></i></a></li>
                </ul>            
            </div>
            <div class="paginaLogin">                 
                <form action="/busers/cerrarSesion" method="POST">
                    <h2> <%= datos.userName %></h2>        
                    <p><label id="labelDatosFacturacion" for ="usuario" USUARIO : <%= datos.userName %></label>
